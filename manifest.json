{
    "name": "Deep Ctrl-f",
    "version": "1.0",
    "description": "Control-f's at different levels of linked pages",
    "manifest_version": 2,
    "permissions": ["declarativeContent", "*://*/*"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png" 
        }
    }
}